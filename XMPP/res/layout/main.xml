<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
         		  android:layout_height="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Robot Name:"
                android:minWidth="70dp"
                />

        <EditText
            android:id="@+id/robotname"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:autoText="false"
            android:capitalize="none"
            android:minWidth="150dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="11sp" />

     </LinearLayout>

     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="fill_parent"
         android:layout_height="30dp"
         android:orientation="horizontal" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Host/Port:"
                android:minWidth="70dp"
                />

        <EditText
            android:id="@+id/host"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoText="false"
            android:capitalize="none"
            android:minWidth="150dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoText="false"
            android:capitalize="none"
            android:minWidth="80dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="11sp" />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Service:"
                android:minWidth="70dp"
                />
        <EditText android:id="@+id/service"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:singleLine="true"
                  android:textSize="11sp"
                  android:autoText="false"
                  android:minWidth="250dp"
                  android:capitalize="none"
                  android:scrollHorizontally="true"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Userid:"
                android:minWidth="70dp"
                />
        <EditText android:id="@+id/userid"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:singleLine="true"
                  android:textSize="11sp"
                  android:autoText="false"
                  android:minWidth="250dp"
                  android:capitalize="none"
                  android:scrollHorizontally="true"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Password:"
                android:minWidth="70dp"
                />
        <EditText android:id="@+id/password"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:singleLine="true"
                  android:password="true"
                  android:textSize="11sp"
                  android:autoText="false"
                  android:minWidth="250dp"
                  android:capitalize="none"
                  android:scrollHorizontally="true"/>

	</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bluetooth:"
                android:minWidth="70dp"
                />
        <EditText android:id="@+id/bluetooth"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:singleLine="true"
                  android:textSize="11sp"
                  android:autoText="false"
                  android:minWidth="250dp"
                  android:capitalize="none"
                  android:scrollHorizontally="true"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Recipient:"
                android:minWidth="70dp"
                />
        <EditText android:id="@+id/recipient"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:singleLine="true"
                  android:textSize="11sp"
                  android:autoText="false"
                  android:minWidth="250dp"
                  android:capitalize="none"
                  android:scrollHorizontally="true"/>
    </LinearLayout>

    <Button android:id="@+id/OK"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Save and login">
    </Button>

    <EditText android:id="@+id/listMessages"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:textSize="11sp"
              android:scrollbars="horizontal"
            />

    <EditText
        android:id="@+id/sendText"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:autoText="false"
        android:capitalize="none"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textSize="11sp" />

    <Button android:id="@+id/send"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Send">
    </Button>
</LinearLayout>
